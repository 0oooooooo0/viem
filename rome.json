{
  "files": {
    "ignore": [
      ".next",
      "**/types/multicall.ts",
      "**/node_modules",
      "CHANGELOG.md",
      "abi",
      "cache",
      "chains",
      "contract",
      "coverage",
      "dist",
      "ens",
      "generated.ts",
      "pnpm-lock.yaml",
      "public",
      "test",
      "utils",
      "wallet",
      "window"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  }
}
