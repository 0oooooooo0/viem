{
  "files": {
    "ignore": [
      ".next",
      "**/types/multicall.ts",
      "**/node_modules",
      "CHANGELOG.md",
      "cache",
      "coverage",
      "dist",
      "generated.ts",
      "pnpm-lock.yaml",
      "./abi",
      "./chains",
      "./contract",
      "./ens",
      "./public",
      "./test",
      "./utils",
      "./wallet",
      "./window"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "useShorthandArrayType": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  }
}