{
  "name": "@viem/root",
  "private": true,
  "scripts": {
    "anvil": "source .env && anvil --fork-url $ANVIL_FORK_URL --fork-block-number 15132000",
    "build": "preconstruct build",
    "changeset": "changeset",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "dev": "preconstruct dev",
    "dev:docs": "pnpm --filter docs dev",
    "dev:example": "pnpm --filter dev-example dev",
    "format": "prettier . --write",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm lint --fix",
    "postinstall": "husky install .config/husky && preconstruct dev",
    "preinstall": "npx only-allow pnpm",
    "size": "bundlewatch --config .config/bundlewatch.config.js",
    "test": "vitest dev --coverage --no-threads",
    "test:ci": "vitest --no-threads",
    "test:ui": "vitest dev --ui --no-threads",
    "typecheck": "tsc --noEmit"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.2",
    "@preconstruct/cli": "^2.2.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/eslint": "^8.4.5",
    "@types/node": "^17.0.45",
    "@types/prettier": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitest/ui": "^0.19.1",
    "bundlewatch": "^0.3.3",
    "c8": "^7.12.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.15.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  }
}
